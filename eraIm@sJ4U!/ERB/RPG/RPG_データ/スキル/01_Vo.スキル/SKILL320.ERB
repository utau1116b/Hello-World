;1120	神様のBirthday

;スキル説明を表示
;ARG:0	スキルレベル
;RETURN	0:レベルアップ不可能　1:レベルアップ可能
@SHOW_SKILL_EXPLAIN_320(ARG:0)
DRAWLINE
PRINTFORML %ABLNAME:320%
PRINTL スキル説明（アイドル達の語り口）
DRAWLINE
PRINTL 敵全体に大ダメージ

;ハート軽減チェック
IF ABL:(ARG:0):320 > 3
CALL SHOW_EXPEND_MP(ARG:0, 0)
ELSEIF ABL:(ARG:0):320 > 0
CALL SHOW_EXPEND_MP(ARG:0, 0)
ENDIF
PRINTL 
DRAWLINE


IF ABL:(ARG:0):320 >= 5
	RETURN 0
ELSE
	RETURN 1
ENDIF


;使用可能チェック
;ARG:0	対象キャラ登録番号
@COMABLE_320(ARG:0)
LOCAL:0 = 1
LOCAL:1 = 0
;戦闘中限定かどうか
IF TFLAG:戦闘中 == 0
	LOCAL:0 = 0
ENDIF
;封印状態かどうか
IF CFLAG:(ARG:0):シール状態
	LOCAL:0 = 0
ENDIF

;消費MP

IF ABL:(ARG:0):320 > 0
	LOCAL:1 = 0
ENDIF

CALL CHECK_MP(ARG:0, LOCAL:1)
IF RESULT == 0
	LOCAL:0 = -1
ENDIF

RETURN LOCAL:0

;スキル効果を設定
;ARG:0	使用キャラ登録番号
@SELECT_SKILL_TARGET_320(ARG:0)
IF ARG:0 <= 10
	CALL SELECT_TARGET_POSITION_ENEMY(ARG:0, 1)
ELSE
	;CALL SHOW_SKILL_EXPLAIN_320(ARG:0)
	;POSITIONの引数は(0:敵単体　1:敵全体　2:自分　3:味方単体　4:味方全体　5:敵味方全体)
	CALL SELECT_TARGET_POSITION(1)
ENDIF

IF RESULT == 0
	RETURN 0
ELSE
	LOCAL:0 = RESULT
	
	;スキルID
	CFLAG:(ARG:0):現在状態 = 320
	;時間補正
	;CFLAG:(ARG:0):7131 += CFLAG:(ARG:0):7131 / 10
	;対象
	CFLAG:(ARG:0):行動の対象 = LOCAL:0
	;集中フラグ
	;CFLAG:(ARG:0):7133 = 0
	
	RETURN 1
ENDIF

;スキル発動
;ARG:0	使用キャラ
;ARG:1	対象
@USE_SKILL_320(ARG:0, ARG:1)
CALL INIT_USE_SKILL_FLAG
;スキルID
TFLAG:スキルID = 320
;使用キャラ
TFLAG:使用キャラ = ARG:0
;対象キャラ
TFLAG:対象キャラ = ARG:1
;スキル種別
TFLAG:スキル種別 = 1
;属性変化
TFLAG:属性変化 = 0

;威力係数(攻撃力に乗算　実際の値の100倍)
TFLAG:威力係数 = 100
;威力補正(攻撃力に加算)
TFLAG:威力補正 = 0
;ダメージ係数(最終ダメージに乗算　実際の値の100倍)
TFLAG:ダメージ係数 = 100
;ダメージ補正(最終ダメージに加算)
TFLAG:ダメージ補正 = 0
;対象範囲
TFLAG:対象範囲 = 0
;命中補正
TFLAG:命中補正 = 10
;必中補正
TFLAG:必中補正 = 0
;クリティカル補正
TFLAG:クリティカル補正 = 0


;攻撃属性
;VO1170
;VI1172
;DA1171
;EX1180
IF TFLAG:スキルID >= 301 && TFLAG:スキルID <= 400
	TFLAG:VO属性 = 1
ELSEIF TFLAG:スキルID >= 501 && TFLAG:スキルID <= 600
	TFLAG:DA属性 = 1
ELSEIF TFLAG:スキルID >= 401 && TFLAG:スキルID <= 500
	TFLAG:VI属性 = 1
ELSE
	TFLAG:無属性 = 0
ENDIF


;消費ハート
TFLAG:消費ハート = 0



PRINTFORML %CALLNAME:(ARG:0)%＞＞%SONGNAME:(320-300)%！

CALL COMMON_SKILL_FIX






