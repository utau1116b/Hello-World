;1340	EXCAVATE

;スキル説明を表示
;ARG:0	スキルレベル
;RETURN	0:レベルアップ不可能　1:レベルアップ可能
@SHOW_SKILL_EXPLAIN_540(ARG:0)
DRAWLINE
PRINTFORML EXCAVATE
PRINTL スキル説明（アイドル達の語り口）
DRAWLINE
PRINTL 1ターン　自分へのダメージを大幅に軽減する

;TENSION軽減チェック
IF ABL:(ARG:0):540 > 3
CALL SHOW_EXPEND_MP(ARG:0, 0)
ELSEIF ABL:(ARG:0):540 > 0
CALL SHOW_EXPEND_MP(ARG:0, 0)
ENDIF
PRINTL 
DRAWLINE


IF ABL:(ARG:0):540 >= 5
	RETURN 0
ELSE
	RETURN 1
ENDIF


;使用可能チェック
;ARG:0	対象キャラ登録番号
@COMABLE_540(ARG:0)
LOCAL:0 = 1
LOCAL:1 = 0
;戦闘中限定かどうか
IF TFLAG:戦闘中 == 0
	LOCAL:0 = 0
ENDIF
;封印状態かどうか
IF CFLAG:(ARG:0):シール状態
	LOCAL:0 = 0
ENDIF

;消費MP
IF ABL:(ARG:0):540 > 3
LOCAL:1 = 0
ELSEIF ABL:(ARG:0):540 > 0
LOCAL:1 = 0
ENDIF

CALL CHECK_MP(ARG:0, LOCAL:1)
IF RESULT == 0
	LOCAL:0 = -1
ENDIF

RETURN LOCAL:0

;スキル効果を設定
;ARG:0	使用キャラ登録番号
@SELECT_SKILL_TARGET_540(ARG:0)
IF ARG:0 <= 10
	CALL SELECT_TARGET_POSITION_ENEMY(ARG:0, 2)
ELSE
	;CALL SHOW_SKILL_EXPLAIN_540(ARG:0)
	;POSITIONの引数は(0:敵単体　1:敵全体　2:自分　3:味方単体　4:味方全体　5:敵味方全体)
	CALL SELECT_TARGET_POSITION(2)
ENDIF

IF RESULT == 0
	RETURN 0
ELSE
	LOCAL:0 = RESULT
	
	;スキルID
	CFLAG:(ARG:0):現在状態 = 540
	;時間補正
	;CFLAG:(ARG:0):7131 += CFLAG:(ARG:0):7131 / 10
	;対象
	CFLAG:(ARG:0):行動の対象 = LOCAL:0
	;集中フラグ
	;CFLAG:(ARG:0):7133 = 0
	
	RETURN 1
ENDIF

;スキル発動
;ARG:0	使用キャラ
;ARG:1	対象
@USE_SKILL_540(ARG:0, ARG:1)
CALL INIT_USE_SKILL_FLAG
;スキルID
TFLAG:スキルID = 540
;使用キャラ
TFLAG:使用キャラ = ARG:0
;対象キャラ
TFLAG:対象キャラ = ARG:1
;スキル種別
TFLAG:スキル種別 = 0
;属性変化
TFLAG:属性変化 = 0

IF ABL:(ARG:0):540 == 1
	TFLAG:特殊状態変化 = 1107100
	TFLAG:特殊状態変化値 = 2
ELSEIF ABL:(ARG:0):540 == 2
	TFLAG:特殊状態変化 = 1107100
	TFLAG:特殊状態変化値 = 3
ELSEIF ABL:(ARG:0):540 == 3
	TFLAG:特殊状態変化 = 1107100
	TFLAG:特殊状態変化値 = 4
ELSEIF ABL:(ARG:0):540 == 4
	TFLAG:特殊状態変化 = 1107100
	TFLAG:特殊状態変化値 = 5
ELSE
	TFLAG:特殊状態変化 = 1107100
	TFLAG:特殊状態変化値 = 5
ENDIF


;状態変化系(下3桁：確率　4桁〜：効果時間)TFLAG:スリップ付加〜7107

;ステータス変化

;変化量指定　各CFLAGに直接値を上書きする　0の場合は何もしないので、リセットしたい場合は-1を指定
;値は　下3ケタ→確率　4〜6ケタ→変化量　7桁目〜→残り時間
;TFLAG:変化★〜TFLAG:変化気絶耐性

;低下しているものだけリセットし、強化されているものはそのままにするフラグ
;TFLAG:能力低下治療	能力低下治療

;攻撃属性
TFLAG:VI属性 = 1


;消費TP
IF ABL:(ARG:0):540 > 3
	;消費TP
	TFLAG:消費ハート = 0
ELSEIF ABL:(ARG:0):540 > 0
	;消費TP
	TFLAG:消費ハート = 0
ENDIF



PRINTFORML %CALLNAME:(ARG:0)%＞＞%SONGNAME:(540-300)%！

