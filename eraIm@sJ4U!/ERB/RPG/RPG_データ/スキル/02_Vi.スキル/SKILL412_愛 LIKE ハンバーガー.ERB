	CALL SELECT_TARGET_POSITION_ENEMY(ARG:0, 4)
ELSE
	;CALL SHOW_SKILL_EXPLAIN_412(ARG:0)
	;POSITIONの引数は(0:敵単体　1:敵全体　2:自分　3:味方単体　4:味方全体　5:敵味方全体)
	CALL SELECT_TARGET_POSITION(4)
ENDIF

