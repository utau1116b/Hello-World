	RETURN 0
ELSE
	RETURN 1
ENDIF


;使用可能チェック
;ARG:0	対象キャラ登録番号
@COMABLE_411(ARG:0)
LOCAL:0 = 1
LOCAL:1 = 0
;戦闘中限定かどうか
IF TFLAG:戦闘中 == 0
	LOCAL:0 = 0
ENDIF
;封印状態かどうか
IF CFLAG:(ARG:0):シール状態
	LOCAL:0 = 0
ENDIF

;消費MP
LOCAL:1 = 24


CALL CHECK_MP(ARG:0, LOCAL:1)
IF RESULT == 0
	LOCAL:0 = -1
ENDIF

RETURN LOCAL:0

;スキル効果を設定
;ARG:0	使用キャラ登録番号
@SELECT_SKILL_TARGET_411(ARG:0)
IF ARG:0 <= 10
	CALL SELECT_TARGET_POSITION_ENEMY(ARG:0, 2)
ELSE
	;CALL SHOW_SKILL_EXPLAIN_411(ARG:0)
	;POSITIONの引数は(0:敵単体　1:敵全体　2:自分　3:味方単体　4:味方全体　5:敵味方全体)
	CALL SELECT_TARGET_POSITION(2)
ENDIF

IF RESULT == 0
	RETURN 0
ELSE
	LOCAL:0 = RESULT
	
	;スキルID
	CFLAG:(ARG:0):現在状態 = 411
	;時間補正
	;CFLAG:(ARG:0):7131 += CFLAG:(ARG:0):7131 / 10
	;対象
	CFLAG:(ARG:0):行動の対象 = LOCAL:0
	;集中フラグ
	;CFLAG:(ARG:0):7133 = 0
	
	RETURN 1
ENDIF

