@SHOW_PT_STATUS
IF FLAG:リーダー > 0
	CALL SET_COLOR(FLAG:リーダー)
	PRINTFORM %CALLNAME:(FLAG:リーダー), 18, LEFT%
	RESETCOLOR
ENDIF
IF FLAG:メンバー2 > 0
	CALL SET_COLOR(FLAG:メンバー2)
	PRINTFORM %CALLNAME:(FLAG:メンバー2), 18, LEFT%
	RESETCOLOR
ENDIF
IF FLAG:メンバー3 > 0
	CALL SET_COLOR(FLAG:メンバー3)
	PRINTFORM %CALLNAME:(FLAG:メンバー3), 18, LEFT%
	RESETCOLOR
ENDIF
IF FLAG:メンバー4 > 0
	CALL SET_COLOR(FLAG:メンバー4)
	PRINTFORM %CALLNAME:(FLAG:メンバー4), 18, LEFT%
	RESETCOLOR
ENDIF
IF FLAG:メンバー5 > 0
	CALL SET_COLOR(FLAG:メンバー5)
	PRINTFORM %CALLNAME:(FLAG:メンバー5), 18, LEFT%
	RESETCOLOR
ENDIF
PRINTL
FOR LOCAL:0, 1080, 1085
	IF FLAG:(LOCAL:0) > 0
		CALL SET_COLOR(19)
		PRINTFORM ★
		RESETCOLOR
		IF BASE:(FLAG:(LOCAL:0)):HP == 0
			SETCOLOR 0xEE1010
		ELSEIF (BASE:(FLAG:(LOCAL:0)):HP  * 100 / MAXBASE:(FLAG:(LOCAL:0)):HP) < 30
			SETCOLOR 0xEE9910
		ENDIF
		PRINTFORM {BASE:(FLAG:(LOCAL:0)):HP,4}/{MAXBASE:(FLAG:(LOCAL:0)):HP,4}       
		RESETCOLOR
	ENDIF
NEXT
PRINTL
FOR LOCAL:0, 1080, 1085
	IF FLAG:(LOCAL:0) > 0
		CALL SET_COLOR(16)
		CALL HEARTMARK
		PRINT  
		RESETCOLOR
		IF BASE:(FLAG:(LOCAL:0)):MP == 0
			SETCOLOR 0xEE1010
		ELSEIF (BASE:(FLAG:(LOCAL:0)):MP * 100 / MAXBASE:(FLAG:(LOCAL:0)):MP) < 30
			SETCOLOR 0xEE9910
		ENDIF
		PRINTFORM {BASE:(FLAG:(LOCAL:0)):MP,4}/{MAXBASE:(FLAG:(LOCAL:0)):MP,4}       
		RESETCOLOR
	ENDIF
NEXT
PRINTL
FOR LOCAL:0, 1080, 1085
	IF FLAG:(LOCAL:0) > 0
		GETFONT
		CHKFONT "Times New Roman"
		SIF RESULT
			SETFONT "Times New Roman"
		PRINTFORM VL 
		SETFONT RESULTS
		CALL PRINT_BAR_VL, (FLAG:(LOCAL:0)), 1
		IF BASE:(FLAG:(LOCAL:0)):ボルテージ < 100
			SETCOLOR COLOR("light-gray")
			PRINTFORM  Lv0 
			RESETCOLOR
		ELSEIF BASE:(FLAG:(LOCAL:0)):ボルテージ < 200
			PRINTFORM  Lv1 
		ELSEIF BASE:(FLAG:(LOCAL:0)):ボルテージ < 300
			PRINTFORM  Lv2 
		ELSEIF BASE:(FLAG:(LOCAL:0)):ボルテージ < 100
			PRINTFORM  Lv3 
		ELSE
			PRINTFORM  Lv4 
		ENDIF
		
	ENDIF
NEXT
PRINTL

