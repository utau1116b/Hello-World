;タイムカード番号
@TIME_CARD(ARG:0)
;乙女よ大志を抱け！（春香限定技）
IF ARG:0 == 1256 || ARG:0 == 1257 || ARG:0 == 1258
	;スキルID
	TFLAG:スキルID = 302
	;使用キャラ
	TFLAG:使用キャラ = TFLAG:乙女よ大志を抱け！使用キャラ
	;対象キャラ
	TFLAG:対象キャラ = TFLAG:乙女よ大志を抱け！対象キャラ
	;スキル種別
	TFLAG:スキル種別 = 1
	;属性変化
	TFLAG:属性変化 = 0

	TFLAG:スリップ付加 = 15 + 1000 * 70
	TFLAG:威力係数 = 140
	TFLAG:威力補正 = 2
	;ダメージ係数(最終ダメージに乗算　実際の値の100倍)
	IF ABL:(TFLAG:乙女よ大志を抱け！使用キャラ):302 == 1
		TFLAG:ダメージ係数 = 120
	ELSEIF ABL:(TFLAG:乙女よ大志を抱け！使用キャラ):302 == 2
		TFLAG:ダメージ係数 = 125
	ELSEIF ABL:(TFLAG:乙女よ大志を抱け！使用キャラ):302 == 3
		TFLAG:ダメージ係数 = 130
	ELSEIF ABL:(TFLAG:乙女よ大志を抱け！使用キャラ):302 == 4
		TFLAG:ダメージ係数 = 145
	ELSE
		TFLAG:ダメージ係数 = 160
	ENDIF

	;対象範囲
	TFLAG:対象範囲 = 5
	;命中補正
	TFLAG:命中補正 = 30
	;必中補正
	TFLAG:必中補正 = 0
	;クリティカル補正
	TFLAG:クリティカル補正 = 15
	;攻撃属性
	TFLAG:VO属性 = 1
	;標的が気絶していることもあるはずなので、気絶キャラ認める
	TFLAG:気絶キャラ認める = 1
	;本人が気絶している場合もあるはずなので、条件チェック無視
	TFLAG:発動前条件チェック無視 = 1
	PRINTFORML %CALLNAME:(TFLAG:乙女よ大志を抱け！使用キャラ)%の%ABLNAME:302%！
	CALL COMMON_SKILL_FIX
	TFLAG:気絶キャラ認める = 0
ENDIF
