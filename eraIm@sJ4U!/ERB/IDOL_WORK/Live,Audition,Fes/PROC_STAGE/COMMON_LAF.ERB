;オーディションで何番かを返す関数
@オーディション順位()
;LOCAL
;LOCAL1
#FUNCTIONS
#LOCALSIZE 3
#LOCALSSIZE 1
;初回は0点なので、代わりに1を代入しておく
;SIF TFLAG:味方スコア == 0
;	TFLAG:味方スコア = 1
LOCAL:1 = TFLAG:オーディション合格点 / 100
LOCAL:2 = TFLAG:味方スコア / LOCAL:1
LOCAL:1 = (100 - LOCAL:2)
SIF LOCAL:1 <= 1
	LOCAL:1 = 1

;オーディション1位なら記者が付く可能性
SIF LOCAL:1 <= 1
	TFLAG:記者判定 = 1
	
SIF LOCAL:1 >= 100
	LOCAL:1 = 100

TFLAG:現在順位 = LOCAL:1

LOCALS = {LOCAL:1, 3} / 100
;合格フラグ
SIF (LOCAL:1 <= TFLAG:合格人数) && TFLAG:合格フラグ != 1
	TFLAG:合格フラグ = 1
	
RETURNF LOCALS

@ハコユレ震度()
#FUNCTIONS
#LOCALSIZE 5
VARSET LOCAL
FOR LOCAL, 0, 100
	IF TFLAG:味方スコア >= TFLAG:ハコユレ上昇値 * LOCAL
		LOCAL:1 ++
	ENDIF
NEXT
LOCAL:2 = -20 + LOCAL:1
SIF LOCAL:2 > 99
	LOCAL:2 = 99

TFLAG:現在ハコユレ = LOCAL:2

SIF (LOCAL:2 >= TFLAG:合格ハコユレ震度) && TFLAG:合格フラグ != 1
	TFLAG:合格フラグ = 1

ABS LOCAL:2
LOCAL:3 = LOCAL:2 % 10
LOCAL:4 = LOCAL:2 - LOCAL:3
LOCAL:3 = ABS(LOCAL:3)
LOCAL:4 = ABS(LOCAL:4 / 10)
IF LOCAL:2 < 0
	LOCALS = −
ELSEIF LOCAL:2 == 0
	LOCALS = ±
ELSE
	LOCALS = ＋
ENDIF
LOCALS = %LOCALS%%TOSTR(LOCAL:4)%.%TOSTR(LOCAL:3)%
RETURNF LOCALS
