	CASE 1200 TO 1299
		IF ARG > 0
			LOCAL:6 = 25
		ELSE
			LOCAL:6 = 15
			LOCAL:4 *= 10000
			TIMES LOCAL:4, 0.6
			LOCAL:4 /= 10000
		ENDIF
		LOCAL:7 = 1
	CASEELSE
ENDSELECT
