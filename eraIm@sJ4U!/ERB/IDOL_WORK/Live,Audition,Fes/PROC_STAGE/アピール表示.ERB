;ARG			対象
;ARG:1			PERFECT,GOOD,BAD
;ARG:2			表示する値
;ARG:3〜ARG:5	思い出時VOVIDAスコア
;ARG:6			思い出ボーナス点
;バーストのことを失念していた…
@アピール表示(ARG, ARG:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
ALIGNMENT CENTER
;通常時
IF ARG:3 == 0
	CALL アピール表示_PGB(ARG:1, TFLAG:アピール種別)
	CALL 得点表示(ARG:2, TFLAG:アピール種別)
	;ラッキースター
;思い出時
ELSE

	CALL アピール表示_PGB(ARG:1, 5)
	CALL 得点表示(ARG:6, 5, ARG:3, ARG:4, ARG:5)
	;ラッキースター
ENDIF
ALIGNMENT LEFT
;ARG	表示する点数
;ARG:1	何アピールか
;ARG:2〜ARG:4	思い出時の表示点数
@得点表示(ARG, ARG:1, ARG:2, ARG:3, ARG:4)
;
LOCAL = ARG:1
TSTR = %" "%
TSTR:1 = %" "%
IF ARG:1 != 5
	
	IF LOCAL == 1
		CALL SET_COLOR("ボーカル")
		;TSTR = %TSTR, 20%+ {ARG, 4}
		;TSTR:1 = %TSTR:1, 20%￣￣￣
		;LOCAL:1 = GETBGCOLOR()
		;CALL FADE(8, SET_COLOR_FUNC("ボーカル"), LOCAL:1, TSTR, TSTR:1)
		PRINTFORM %TSTR, 20%
		PRINTFORM + {ARG, 4}
		PRINTL 
		PRINTFORM %TSTR, 20%
		PRINTFORM ￣￣￣
	ELSEIF LOCAL == 2
		PRINTFORM %TSTR, 10%
		CALL SET_COLOR("ビジュアル")
		PRINTFORM + {ARG, 4}
		PRINTFORM %TSTR, 10%
		PRINTL 
		PRINTFORM %TSTR, 10%
		PRINTFORM ￣￣￣
		PRINTFORM %TSTR, 10%
	ELSEIF LOCAL == 3
		CALL SET_COLOR("ダンス")
		PRINTFORM + {ARG, 4}
		PRINTFORM %TSTR, 20%
		PRINTL 
		PRINTFORM ￣￣￣
		PRINTFORM %TSTR, 20%
	ENDIF
		PRINTL 
	TWAIT 180, 0
ELSEIF ARG:1 == 5

		CALL SET_COLOR("ダンス")
		PRINTFORM %TSTR, 20%
		PRINTFORM + {ARG:4, 4}

		PRINTFORM %TSTR, 10%
		CALL SET_COLOR("ビジュアル")
		PRINTFORM + {ARG:3, 4}
		PRINTFORM %TSTR, 10%

		CALL SET_COLOR("ボーカル")
		PRINTFORM + {ARG:2, 4}
		PRINTFORM %TSTR, 20%
		PRINTL 
		
		CALL SET_COLOR("ダンス")
		PRINTFORM %TSTR, 20%
		PRINTFORM ￣￣￣

		CALL SET_COLOR("ビジュアル")
		PRINTFORM %TSTR, 10%
		PRINTFORM ￣￣￣
		PRINTFORM %TSTR, 10%

		CALL SET_COLOR("ボーカル")
		PRINTFORM ￣￣￣
		PRINTFORM %TSTR, 20%
		RESETCOLOR
		PRINTL 
		PRINTFORM BONUS +{ARG, 5}
		PRINTFORM %TSTR, 30%
		PRINTL 
		PRINTFORM ￣￣￣￣￣￣
		PRINTFORM %TSTR, 30%
		PRINTL 
		TWAIT 180, 0
ENDIF
RESETCOLOR
;ARG	対象
;ARG:1	得点
@アピール表示_バースト(ARG, ARG:1)
;ARG   グッド、バッド、パーフェクト
;ARG:1 何アピールか
@アピール表示_PGB(ARG:0, ARG:1)
TSTR = %" "%
TSTR:1 = %" "%
SELECTCASE ARG:1
	CASE 0 TO 3
		SELECTCASE ARG:1
			CASE 1
				TSTR = %TSTR, 20%
				TSTR:1 = %TSTR:1%
			CASE 2
				TSTR = %TSTR, 10%
				TSTR:1 = %TSTR:1, 10%
			CASE 3
				TSTR = %TSTR%
				TSTR:1 = %TSTR:1, 20%
			CASEELSE
		ENDSELECT
		SELECTCASE ARG
			CASE 0
				CALL BADアピール(TSTR, TSTR:1)
			CASE 1
				CALL GOODアピール(TSTR, TSTR:1)
			CASE 2
				CALL PERFECTアピール(TSTR, TSTR:1)
		ENDSELECT
	;思い出
	CASEELSE
		FOR LOCAL, 0, 3
			TSTR = %" "%
			TSTR:1 = %" "%
			SELECTCASE LOCAL
				CASE 0
					TSTR = %TSTR, 20%
					TSTR:1 = %TSTR:1%
				CASE 1
					TSTR = %TSTR, 10%
					TSTR:1 = %TSTR:1, 10%
				CASE 2
					TSTR = %TSTR%
					TSTR:1 = %TSTR:1, 20%
				CASEELSE
		
			ENDSELECT
			SELECTCASE ARG
				CASE 0
					CALL BADアピール(TSTR, TSTR:1)
				CASE 1
					CALL GOODアピール(TSTR, TSTR:1)
				CASE 2
					CALL PERFECTアピール(TSTR, TSTR:1)
			ENDSELECT
		NEXT
ENDSELECT
