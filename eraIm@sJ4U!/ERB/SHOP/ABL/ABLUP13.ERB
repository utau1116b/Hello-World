@ISABLUP13
IF ABL:13 >= 99 || !TALENT:122
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF
;能力アップに必要なコストを計算
CALL COSTABLUP13

;条件別にＯＫかダメかを記録する
I = 0
J = 0
;能力アップ可能なら1にする
Z = 0

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[両刀]なら無視できる）
IF ABL:13 >= 3 && TALENT:81 == 0
	F = ABL:13 * 3
	IF EXP:50 < F
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF
;欲情の珠で上げる
SIF JUEL:5 < A
	I |= 1
;屈服の珠で上げる
SIF JUEL:6 < C
	I |= 1
;レズ経験が必要
SIF EXP:41 < B
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF D > 0
	;快Ｃの珠で上げる
	SIF JUEL:0 < D
		J |= 1
	;レズ経験が必要
	SIF EXP:41 < B
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



