	A = 200
	B = 50
	C = 0
	D = 1000
ELSEIF ABL:13 == 1
	A = 1000
	B = 200
	C = 0
	D = 5000
ELSEIF ABL:13 == 2
	A = 3000
	B = 500
	C = 1000
	D = 0
ELSEIF ABL:13 == 3
	A = 8000
	B = 1000
	C = 2000
	D = 0
	;一線越えない
	IF TALENT:27
		TIMES A , 1.10
		TIMES B , 1.10
		TIMES C , 1.10
	ENDIF
ELSEIF ABL:13 == 4
	A = 20000
	B = 2000
	C = 5000
	D = 0
	;一線越えない
	IF TALENT:27
		TIMES A , 1.30
		TIMES B , 1.30
		TIMES C , 1.30
	ENDIF
ELSE
	A = 20000
	B = 2000
	C = 5000
	D = 0
	;EASYモードなら軽減
	IF ITEM:99 == 1
		A = A * (ABL:13 - 3)
		B = B * (ABL:13 - 2) / 2
		C = C * (ABL:13 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
			TIMES B , 1.30
			TIMES C , 1.30
		ENDIF
	ELSE
		A = A * (ABL:13 - 3) * (ABL:13 - 3)
		B = B * (ABL:13 - 3)
		C = C * (ABL:13 - 3) * (ABL:13 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
			TIMES B , 1.30
			TIMES C , 1.30
		ENDIF
	ENDIF
ENDIF

