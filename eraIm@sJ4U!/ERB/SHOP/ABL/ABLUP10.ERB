;-------------------------------------------------
;自慰中毒を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP10
IF ABL:10 == 0
	A = 3000
	B = 10000
	C = 1000
	D = 100
	E = 20
	F = 10000
ELSEIF ABL:10 == 1
	A = 6000
	B = 25000
	C = 3000
	D = 250
	E = 40
	F = 25000
ELSEIF ABL:10 == 2
	A = 12000
	B = 50000
	C = 6000
	D = 500
	E = 60
	F = 50000
ELSEIF ABL:10 == 3
	A = 20000
	B = 100000
	C = 15000
	D = 1000
	E = 100
	F = 100000
	;一線越えない
	IF TALENT:27
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
		TIMES D , 2.00
		TIMES E , 2.00
		TIMES F , 2.00
	ENDIF
ELSEIF ABL:10 == 4
	A = 40000
	B = 300000
	C = 40000
	D = 2000
	E = 160
	F = 300000
	;一線越えない
	IF TALENT:27
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
		TIMES D , 3.00
		TIMES E , 3.00
		TIMES F , 3.00
	ENDIF
;L系列用その２、ここから
ELSE
	A = 40000
	B = 300000
	C = 40000
	D = 2000
	E = 160
	F = 300000
	;EASYモードなら軽減
	IF ITEM:99 == 1
		A = A * (ABL:10 - 3)
		B = B * (ABL:10 - 3)
		C = C * (ABL:10 - 3)
		D = D * (ABL:10 - 2) / 2
		E = E * (ABL:10 - 2) / 2
		F = F * (ABL:10 - 3)
		;一線越えない
		IF TALENT:27
			A = A * 3
			B = B * 3
			C = C * 3
			D = D * 3
			E = E * 3
			F = F * 3
		ENDIF
	ELSE
		A = A * (ABL:10 - 3) * (ABL:10 - 3)
		B = B * (ABL:10 - 3) * (ABL:10 - 3)
		C = C * (ABL:10 - 3) * (ABL:10 - 3)
		D = D * (ABL:10 - 3)
		E = E * (ABL:10 - 3)
		F = F * (ABL:10 - 3) * (ABL:10 - 3)
		;一線越えない
		IF TALENT:27
			A = A * (ABL:10 - 1)
			B = B * (ABL:10 - 1)
			C = C * (ABL:10 - 1)
			D = D * (ABL:10 - 1)
			E = E * (ABL:10 - 1)
			F = F * (ABL:10 - 1)
		ENDIF
	ENDIF
;L系列用その２、ここまで
ENDIF

