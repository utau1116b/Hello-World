;-------------------------------------------------
;舞踊技能を上げるのに必要なコストを計算
;-------------------------------------------------
;A	習得の珠
;B	舞踊経験
;C	舞踊の珠
@COSTABLUP47
IF ABL:Ｄａ技能 == 0
	A = 1
	B = 1
	C = 1
ELSEIF ABL:Ｄａ技能 <= 1
	A = 10
	B = 10
	C = 10
	A = A * (ABL:Ｄａ技能 + 1)
	B = B * (ABL:Ｄａ技能 + 1)
	C = C * (ABL:Ｄａ技能 + 1)
ELSEIF ABL:Ｄａ技能 <= 3
	A = 25
	B = 25
	C = 25
	SIF EXP:舞踊経験 >= EXPLV:3
		A = 20
	SIF EXP:舞踊経験 >= EXPLV:3
		C = 20
	A = A * (ABL:Ｄａ技能 - 1)
	B = B * (ABL:Ｄａ技能 - 1)
	C = C * (ABL:Ｄａ技能 - 1)
ELSEIF ABL:Ｄａ技能 <= 5
	A = 200
	B = 40
	C = 200
	SIF EXP:舞踊経験 >= EXPLV:4
		A = 180
	SIF EXP:舞踊経験 >= EXPLV:4
		C = 180
	A = A * (ABL:Ｄａ技能 - 3)
	B = B * (ABL:Ｄａ技能 - 3)
	C = C * (ABL:Ｄａ技能 - 3)
ELSEIF ABL:Ｄａ技能 <= 8
	A = 3000
	B = 80
	C = 3000
	SIF EXP:舞踊経験 >= EXPLV:5
		A = 2500
	SIF EXP:舞踊経験 >= EXPLV:5
		C = 2500
	A = A * (ABL:Ｄａ技能 - 5)
	C = C * (ABL:Ｄａ技能 - 5)
ELSEIF ABL:Ｄａ技能 <= 11
	A = 20000
	B = 100
	C = 20000
	SIF EXP:舞踊経験 >= EXPLV:5
		A = 15000
	SIF EXP:舞踊経験 >= EXPLV:5
		C = 15000
	A = A + 8000 * (ABL:Ｄａ技能 - 9)
	C = C + 8000 * (ABL:Ｄａ技能 - 9)
ELSE
	A = 20000
	B = 120
	C = 20000
	;初月モードなら軽減
	IF ITEM:99 == 1
		A = A * (ABL:Ｄａ技能 - 3)
		B = B * (ABL:Ｄａ技能 - 2) / 2
		C = C * (ABL:Ｄａ技能 - 3)
	ELSE
		A = A * (ABL:Ｄａ技能 - 3) * (ABL:Ｄａ技能 - 3)
		B = B * (ABL:Ｄａ技能 - 3)
		C = C * (ABL:Ｄａ技能 - 3) * (ABL:Ｄａ技能 - 3)
	ENDIF
ENDIF

