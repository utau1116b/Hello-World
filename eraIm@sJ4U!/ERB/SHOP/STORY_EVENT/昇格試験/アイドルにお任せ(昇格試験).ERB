@LAF_EXAM
IF FLAG:24 == 0
	CALL LAF(999)
	RETURN RESULT
ELSE
	CALL SELECT_AUTO_EXAM
	IF RESULT == 1
		CALL MESSAGE_WINDOW, @"%CALLNAME:MASTER%", @"よし、今日は%CALLNAME:TARGET%達に任せる！/皆、頑張って来てくれ！" , "/" , 0 , "LEFT"
		CALL MESSAGE_WINDOW, "", @"%CALLNAME:TARGET%達は、はい！/と勢いよく答えた" , "/" , 0 , "LEFT"
		CALL MMSTOP()
		CALL AUTO_EXAM
		RETURN RESULT
	ELSE
		CALL LAF(999)
		RETURN RESULT
	ENDIF
ENDIF

@SELECT_AUTO_EXAM
;コンフィグONなら自動的にお任せ
;SIF FLAG:23 & 1p5
;	RETURN 1
CALL MESSAGE_WINDOW, @"%CALLNAME:MASTER%", @"（さて、今日の昇格試験はどうしようか？）" , "/" , 0 , "LEFT"
CALL SELECT_CHOICE("俺が指示する", "アイドルにお任せ", "", 1, 1)
IF RESULT == 1
	CALL MESSAGE_WINDOW, @"%CALLNAME:MASTER%", "（やはり、ここは俺が指導しよう）" , "/" , 0 , "LEFT"
	RETURN 0
ELSEIF RESULT == 2
	CALL MESSAGE_WINDOW, @"%CALLNAME:MASTER%", @"（よし、今日は%CALLNAME:TARGET%達に任せよう！）" , "/" , 0 , "LEFT"
	RETURN 1
ENDIF

