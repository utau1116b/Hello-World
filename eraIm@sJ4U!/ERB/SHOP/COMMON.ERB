	ELSEIF ABL:T:88 <= 1000
		V = V * (ABL:T:88 * 4 + 430)
	ELSE
		V = V * (ABL:T:88 + 3430)
	ENDIF

	;カンストする場合
	IF V >= 10000000000000000
		P = 999999999999999999
	;そうでなければ普通に処理
	ELSE
		P /= 200
		IF ABL:T:88 <= 1
			P = P * (ABL:T:88 * 20 + 100)
		ELSEIF ABL:T:88 <= 3
			P = P * (ABL:T:88 * 20 + 100)
		ELSEIF ABL:T:88 <= 5
			P = P * (ABL:T:88 * 14 + 120)
		ELSEIF ABL:T:88 <= 8
