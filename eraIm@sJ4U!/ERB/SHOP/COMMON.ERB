		ELSEIF ABL:T:88 <= 11
			P = P * (ABL:T:88 * 8 + 160)
		ELSEIF ABL:T:88 <= 25
			P = P * (ABL:T:88 * 8 + 180)
		ELSEIF ABL:T:88 <= 100
			P = P * (ABL:T:88 * 6 + 230)
		ELSEIF ABL:T:88 <= 1000
			P = P * (ABL:T:88 * 4 + 430)
		ELSE
			P = P * (ABL:T:88 + 3430)
		ENDIF
	ENDIF

ELSE
	P /= 200
	IF ABL:T:88 <= 1
		P = P * (ABL:T:88 * 20 + 100)
	ELSEIF ABL:T:88 <= 3
		P = P * (ABL:T:88 * 20 + 100)
	ELSEIF ABL:T:88 <= 5
