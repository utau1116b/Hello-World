ELSEIF ABL:T:98 <= 10
	;最弱
	TIMES P , 10.00
ELSEIF ABL:T:98 <= 20
	;最弱クラス
	TIMES P , 7.00
ELSEIF ABL:T:98 <= 30
	;弱い方
	TIMES P , 5.00
ELSEIF ABL:T:98 <= 50
	;弱い方
	TIMES P , 3.00
ENDIF


;戦闘技能レベル
IF ABL:T:88 <= 1
	P += 50 + 50 * ABL:T:88
ELSEIF ABL:T:88 <= 3
	P += 100 + 75 * ABL:T:88
ELSEIF ABL:T:88 <= 5
	P += 300 + 100 * ABL:T:88
ELSEIF ABL:T:88 <= 8
	P += 500 + 120 * ABL:T:88
ELSEIF ABL:T:88 <= 11
	P += 800 + 150 * ABL:T:88
ELSEIF ABL:T:88 <= 25
	P += 800 + 200 * ABL:T:88
ELSE
	P += 1000 + 300 * ABL:T:88
ENDIF



;戦闘素質
IF ABL:T:98 == 0
	;素質未設定はLv50とみなす＝倍率55/25倍
	IF P < 10000000
		P = P * 55 / 25
	ELSE
		P = P / 25 * 55
	ENDIF
ELSEIF ABL:T:98 <= 20
	;最弱クラス
	IF P < 10000000
		P = P * (ABL:T:98 + 10) / 30
	ELSE
		P = P / 30 * (ABL:T:98 + 10)
	ENDIF
ELSEIF ABL:T:98 <= 50
	;弱い方
	IF P < 10000000
		P = P * (ABL:T:98 + 5) / 25
	ELSE
		P = P / 25 * (ABL:T:98 + 5)
	ENDIF
ELSEIF ABL:T:98 < 80
	;強い方
	IF P < 10000000
		P = P * ABL:T:98 / 20
	ELSE
		P = P / 20 * ABL:T:98
	ENDIF
ELSE
	;最強クラス
	IF P < 1000000
		P = P * ABL:T:98 / 15
	ELSE
		P = P / 15 * ABL:T:98
	ENDIF
