@CONFIG_GLOBAL
PRINTL どの設定を変更しますか？
IF GLOBAL:1001
	PRINTFORML [1]プロローグを表示させる
ELSE
	PRINTFORML [1]プロローグを表示させない
ENDIF
IF GLOBAL:1002
	PRINTFORML [2]MASTER変更モードをONにする
ELSE
	PRINTFORML [2]MASTER変更モードをOFFにする
ENDIF
IF GLOBAL:1003
	PRINTFORML [3]サウンドをONにする
ELSE
	PRINTFORML [3]サウンドをOFFにする
ENDIF
DRAWLINE
PRINTFORML [0]戻る
$INPUT_LOOP
INPUT
IF RESULT == 1
	IF GLOBAL:1001
		GLOBAL:1001 = 0
		SAVEGLOBAL
		PRINTFORMW プロローグを表示するよう設定しました
	ELSE
		GLOBAL:1001 = 1
		SAVEGLOBAL
		PRINTFORMW プロローグを表示しないよう設定しました
	ENDIF
ELSEIF RESULT == 2
	IF GLOBAL:1002
		GLOBAL:1002 = 0
		SAVEGLOBAL
		PRINTFORMW MASTER変更モードをONにしました
	ELSE
		GLOBAL:1002 = 1
		SAVEGLOBAL
		PRINTFORMW MASTER変更モードをOFFにしました
	ENDIF
ELSEIF RESULT == 3
	IF GLOBAL:1003
		GLOBAL:1003 = 0
		SAVEGLOBAL
		PRINTFORMW サウンドをONにしました
	ELSE
		GLOBAL:1003 = 1
		CALL MMSTOP
		SAVEGLOBAL
		PRINTFORMW サウンドをOFFにしました
	ENDIF
ELSEIF RESULT == 0
	RETURN
ELSE
	REUSELASTLINE 正しい値を入力して下さい
	GOTO INPUT_LOOP
ENDIF
RESTART
