;-------------------------------------------------
;お嫁さんで楽しむ
;系コマンド、レベル
;-------------------------------------------------
@COM199
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;地の文カットのために先にTFLAG:17を取得
IF RAND:5 == 0
	TFLAG:17 = 0
ELSEIF RAND:4 == 0
	TFLAG:17 = 1
ELSEIF RAND:3 == 0
	TFLAG:17 = 2
ELSEIF RAND:2 == 0
	TFLAG:17 = 3
ELSE
	TFLAG:17 = 4
ENDIF
	
SIF PALAM:5 >= PALAMLV:3
	TFLAG:200 = 1
	
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 30

SOURCE:中毒 = 50
SOURCE:恭順 = 120
SOURCE:情愛 = 80

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;合意がないと好感度が下がる
IF !TALENT:合意 && !TFLAG:48
	CFLAG:2 -= 8
	SOURCE:反感 += 300
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(39 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(39 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

RETURN 1
