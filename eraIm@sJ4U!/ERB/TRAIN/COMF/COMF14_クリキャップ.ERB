;-------------------------------------------------
;クリキャップ
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM14
;着脱の処理
TEQUIP:クリキャップ = !TEQUIP:クリキャップ

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 10
DOWNBASE:気力 += 80

SOURCE:快Ｃ = 200
SOURCE:露出 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:反感 += 30

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(39 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(39 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

;EXP:PLAYER:道具使用経験 ++

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COMクリキャップ(ARG)
PRINTL ＜クリキャップ装備中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:ARG:体力 += 5
DOWNBASE:ARG:気力 += 20

SOURCE:ARG:快Ｃ += 100
SOURCE:ARG:露出 += 10
SOURCE:ARG:逸脱 += 15
SOURCE:ARG:反感 += 15
;-------------------------------------------------
;経験の処理
;-------------------------------------------------

RETURN 1
