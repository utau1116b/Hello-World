;-------------------------------------------------
;アナルバイブ装着
;日常系うふふコマンド、レベル2
;-------------------------------------------------
@COM377
;着脱の処理
TEQUIP:アナルバイブ = !TEQUIP:アナルバイブ 
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 60
DOWNBASE:気力 += 150

SOURCE:快Ａ = 250
SOURCE:痛み = 250
SOURCE:露出 = 50
SOURCE:屈従 = 50
SOURCE:逸脱 = 50
SOURCE:反感 = 200
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:反感 += 70

;Aへの苦痛は先に処理しておく
CALL PAIN_CHECK_A(TARGET)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
STAIN:腸内 |= STAIN:Ａ
STAIN:Ａ |= STAIN:腸内
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:Ａ経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(39 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(39 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
EXP:異常経験++
EXP:PLAYER:道具使用経験 ++

RETURN 1
