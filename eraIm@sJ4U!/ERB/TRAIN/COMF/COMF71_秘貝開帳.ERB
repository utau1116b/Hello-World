;-------------------------------------------------
;秘貝開帳
;愛撫系コマンド、レベル2
;-------------------------------------------------
@COM71
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 50
DOWNBASE:気力 += 90

SOURCE:快Ｃ = 43
SOURCE:達成 = 20
;SOURCE:恐怖 = 120
SOURCE:液体 = 10
SOURCE:露出 = 300
SOURCE:屈従 = 450
SOURCE:逸脱 = 150
SOURCE:反感 = 150
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:反感 += 150

;処女、貞操観念
IF TALENT:処女 == 1
	;TIMES SOURCE:恐怖 , 1.20
	TIMES SOURCE:屈従 , 1.20
	TIMES SOURCE:反感 , 1.20
	SOURCE:露出 += 300
	IF TALENT:貞操観念
		TIMES SOURCE:露出 , 2.00
		TIMES SOURCE:逸脱 , 2.00
	ENDIF
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＶ⇔指の汚れが移動
STAIN:Ｖ |= STAIN:手
STAIN:手 |= STAIN:Ｖ
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;露出癖Lv3以上で自慰経験加算
SIF ABL:露出癖 >= 3
	EXP:自慰経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(39 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(39 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

RETURN 1


@CAN_COM71(ARG)
SKIPDISP ARG
PRINTL 秘貝開帳
;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
A = 0
S = 0
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF S
		PRINT  + 
	A += ABL:欲望 * 3
	PRINT 欲望
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 3,')
	S = 1
ENDIF
;ABL:Ｖ感覚
IF ABL:Ｖ感覚
	SIF S
		PRINT  + 
	A += ABL:Ｖ感覚 * 2
	PRINT Ｖ感覚
	PRINTV 'LV,ABL:Ｖ感覚,'(,ABL:Ｖ感覚 * 2,')
	S = 1
ENDIF
;ABL:奉仕精神
IF ABL:奉仕精神
	SIF S
		PRINT  + 
	A += ABL:奉仕精神 * 4
	PRINT 奉仕精神
	PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
	S = 1
ENDIF
;ABL:露出癖
IF ABL:8
	SIF S
		PRINT  + 
	A += ABL:露出癖 * 3
	PRINT ABLNAME:露出癖
	PRINTV 'LV,ABL:露出癖,'(,ABL:露出癖 * 3,')
	S = 1
ENDIF
;ABL:自慰中毒
IF ABL:自慰中毒
	SIF S
		PRINT  + 
	A += ABL:自慰中毒 * 3
	PRINT 自慰中毒
	PRINTV 'LV,ABL:自慰中毒,'(,ABL:自慰中毒 * 3,')
	S = 1
ENDIF

IF MARK:快楽依存
	SIF S
		PRINT  + 
	A += MARK:快楽依存 * 3
	PRINT 快楽依存
	PRINTV 'LV,MARK:快楽依存,'(,MARK:快楽依存 * 3,')
	S = 1
ENDIF

;PALAM:潤滑（の不足）
IF PALAM:潤滑 < PALAMLV:3
	PRINT  - 
	A -= 5
	PRINT 潤滑不足
	PRINTV '(,5,')
	S = 1
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:欲情,5) * 3
	PRINT 欲情
	PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 3,')
	S = 1
ENDIF

;恥じらい
IF TALENT:恥じらい
	PRINT  - 
	A -= 2
	PRINT 恥じらい
	PRINTV '(,2,')
	S = 1
ENDIF
;快感の否定（淫乱、娼婦で無効）
IF TALENT:快感の否定 && !TALENT:淫乱
	PRINT  - 
	A -= 5
	PRINT 快感の否定
	PRINTV '(,5,')
	S = 1
ENDIF
;男嫌い（恋慕、親愛で無効）
IF TALENT:男嫌い && !(TALENT:PLAYER:オトコ) && ((!TALENT:恋慕) || PLAYER != MASTER)
	PRINT  - 
	A -= 12
	PRINT 男嫌い
	PRINTV '(,12,')
	S = 1
ENDIF

;処女
IF TALENT:処女 == 1
	PRINT  - 
	A -= 20
	PRINT 処女
	PRINTV '(,20,')
	S = 1
ELSEIF EXP:Ｖ経験 < EXPLV:2
	PRINT  - 
	A -= 5
	PRINT Ｖ経験
	PRINT 不足
	PRINTV '(,5,')
	S = 1
ENDIF

;調教者がふたなり
IF TALENT:PLAYER:ふたなり
	PRINT  + 
	A += 4
	PRINT ふたなり
	PRINTV '(,4,')
	S = 1
ENDIF

;媚薬
IF TEQUIP:媚薬
	SIF S
		PRINT  + 
	A += 6
	PRINT 媚薬
	PRINTV '(,6,')
	S = 1
ENDIF

;'合計を表示(18以上で実行)
PRINT  = 
PRINTV A

V = 18
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V
WAIT
SKIPDISP 0
;実行できない
SIF A < V
	RETURN 0
RETURN 1
