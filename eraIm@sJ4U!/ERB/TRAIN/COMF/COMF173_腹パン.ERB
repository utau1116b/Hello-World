;-------------------------------------------------
;腹パン
;系コマンド、レベル
;-------------------------------------------------
@COM173
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;主導権によって行為者が変わる
IF !TFLAG:45
	LOCAL = TARGET
	LOCAL:1 = PLAYER
ELSE
	LOCAL = PLAYER
	LOCAL:1 = TARGET
	;[サド]取得用カウント
	SIF ASSIPLAY == 0
		TFLAG:61 += 1
ENDIF
;行為者
TCVAR:116 = LOCAL:1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF !TFLAG:45
	DOWNBASE:体力 += 120
	DOWNBASE:気力 += 100
ELSE
	DOWNBASE:体力 += 20
	DOWNBASE:気力 += 120
ENDIF
SOURCE:痛み = 1500
SOURCE:征服 = 1800
SOURCE:懐疑 = 2700
SOURCE:逸脱 = 1000
SOURCE:反感 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:反感 += 600

;相手主導
IF TFLAG:45
	SOURCE:征服 = 1800
	SOURCE:懐疑 = 2000
;反発感情が高いほど熱が入る
	IF MARK:3 == 1
		SOURCE:征服 += 500
	ELSEIF MARK:3 == 2
		SOURCE:征服 += 1200
	ELSEIF MARK:3 >= 3
		SOURCE:征服 += 2500
	ENDIF
	;サド持ちは懐疑1/4
	SIF TALENT:83
		TIMES SOURCE:22 , 0.25

	;小悪魔持ちは懐疑1/2
	SIF TALENT:87
		TIMES SOURCE:22 , 0.50
	
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(39 + HETEROSEX(TARGET,PLAYER)) += 2
	EXP:PLAYER:(39 + HETEROSEX(TARGET,PLAYER)) += 2
ENDIF
;主導権が主人で、対象がおもらし癖か、利尿剤使用中の時放尿経験　+　１
SIF !TFLAG:45 && (TALENT:おもらし癖 || TEQUIP:22)
	EXP:放尿経験 ++
EXP:異常経験++

RETURN 1

