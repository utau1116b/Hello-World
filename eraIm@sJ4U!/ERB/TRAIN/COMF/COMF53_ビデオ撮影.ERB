;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:ARG:体力 += 0
DOWNBASE:ARG:気力 += 50

SOURCE:ARG:不安 += 1000
SOURCE:ARG:逸脱 += 400
SOURCE:ARG:反感 += 700


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
LOCAL = 1000
SELECTCASE ABL:ARG:マゾっ気
	CASE 0
		TIMES LOCAL , 0.80
		SOURCE:ARG:液体 += 0
		SOURCE:ARG:欲情 += 0
	CASE 1
		TIMES LOCAL , 1.00
		SOURCE:ARG:液体 += 20
		SOURCE:ARG:欲情 += 30
	CASE 2
		TIMES LOCAL , 1.20
		SOURCE:ARG:液体 += 40
		SOURCE:ARG:欲情 += 70
	CASE 3
		TIMES LOCAL , 1.40
		SOURCE:ARG:液体 += 70
		SOURCE:ARG:欲情 += 120
	CASE 4
		TIMES LOCAL , 1.50
		SOURCE:ARG:液体 += 110
		SOURCE:ARG:欲情 += 180
	CASE 5
		TIMES LOCAL , 1.70
		SOURCE:ARG:液体 += 150
		SOURCE:ARG:欲情 += 250
	CASE 6
		TIMES LOCAL , 1.90
		SOURCE:ARG:液体 += 200
		SOURCE:ARG:欲情 += 300
	CASE 7
		TIMES LOCAL , 2.10
		SOURCE:ARG:液体 += 250
		SOURCE:ARG:欲情 += 350
	CASE 8
		TIMES LOCAL , 2.30
		SOURCE:ARG:液体 += 300
		SOURCE:ARG:欲情 += 400
	CASE 9
		TIMES LOCAL , 2.50
		SOURCE:ARG:液体 += 350
		SOURCE:ARG:欲情 += 450
	CASEELSE
		TIMES LOCAL , 3.00
		SOURCE:ARG:液体 += 500
		SOURCE:ARG:欲情 += 500
ENDSELECT
SOURCE:ARG:露出 += LOCAL

