;-------------------------------------------------
;利尿剤
;特殊コマンド
;-------------------------------------------------
@COM52
ITEM:利尿剤 -= 1

TEQUIP:利尿剤 = 1
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	DOWNBASE:体力 += 100
	DOWNBASE:気力 += 100
ELSE
	DOWNBASE:体力 += 200
	DOWNBASE:気力 += 200
ENDIF

SOURCE:逸脱 = 800
;利尿剤効果で軽く変動
SOURCE:反感 = 150


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(39 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(39 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

RETURN 1

