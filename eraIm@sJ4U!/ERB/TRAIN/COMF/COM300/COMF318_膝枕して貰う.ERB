;-------------------------------------------------
;膝枕して貰う
;日常系コマンド　レベル1
;-------------------------------------------------
@COM318
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
;TCVAR:116 = PLAYER
CALL COM300_SUCCESS(90, 9)
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 100
DOWNBASE:MASTER:気力+=100

SOURCE:情愛 = 170
SOURCE:露出 = 55
SOURCE:反感 = 50
SOURCE:受動 = 100
SOURCE:征服 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;ABL:親密をみる
IF ABL:親密 <= 1
	SOURCE:情愛 += (ABL:親密 * 20)
ELSEIF ABL:親密 <= 3
	SOURCE:情愛 += 200 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 5
	SOURCE:情愛 += 400 + (ABL:親密 * 20)
ELSEIF ABL:親密 <= 8
	SOURCE:情愛 += 600 + (ABL:親密 * 30)
	SOURCE:露出 += 200 + (ABL:欲望 * 10)
ELSEIF ABL:親密 <= 11
	SOURCE:情愛 += 800 + (ABL:親密 * 30)
	SOURCE:露出 += 300 + (ABL:欲望 * 10)
ELSE
	SOURCE:情愛 += 1800 + (ABL:親密 * 20)
	SOURCE:露出 += 700 + (ABL:欲望 * 10)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:恭順 = CFLAG:2 / 5
ELSEIF CFLAG:2 <= 5000
	SOURCE:恭順 = 150 + CFLAG:2 / 20
ELSE
	SOURCE:恭順 = 400 + CFLAG:2 / 100
ENDIF

SIF SOURCE:恭順 < 0
	SOURCE:恭順 = 0

SOURCE:受動 = 120 + 240 * ABL:親密

IF TFLAG:SELECTCOM分岐 == -1
	TIMES SOURCE:情愛 , 0.50
	TIMES SOURCE:露出 , 0.40
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:受動 , 0.50
ELSEIF TFLAG:SELECTCOM分岐 == 0
	TIMES SOURCE:露出 , 0.90
ELSE
	TIMES SOURCE:情愛 , 1.50
	TIMES SOURCE:露出 , 1.50
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:受動 , 2.00
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------

;-------------------------------------------------
;経験の処理
;-------------------------------------------------


RETURN 1

