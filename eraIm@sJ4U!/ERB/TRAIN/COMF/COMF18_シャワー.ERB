;-------------------------------------------------
;シャワー
;特殊コマンド
;-------------------------------------------------
@COM18
;着脱の処理　装備時はソース、経験の加算は行わない
TEQUIP:シャワー = !TEQUIP:シャワー
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COMシャワー(ARG)
;シャワー使用中

PRINTL ＜シャワー使用中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:ARG:体力 += 0
DOWNBASE:ARG:気力 += 10

SOURCE:ARG:恭順 += 100
;SOURCE:ARG:反感 += 100
SOURCE:ARG:反感 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;吸血鬼（流水の中では動けないため、いろいろ追加）
IF TALENT:ARG:吸血鬼
	;SOURCE:ARG:不安 += 200
	SOURCE:ARG:屈従 += 200
	SOURCE:ARG:不潔 += 500
	SOURCE:ARG:逸脱 += 500
	SOURCE:ARG:反感 += 500
ENDIF

;動物耳の場合（まぁ基本洗われるのは嫌と解釈）
IF TALENT:ARG:動物耳
	;SOURCE:ARG:不安 += 100
	SOURCE:ARG:屈従 += 100
	SOURCE:ARG:逸脱 += 500
	SOURCE:ARG:反感 += 500
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;シャワーで汚れは常にリセット
STAIN:ARG:口 = 0
STAIN:ARG:手 = 0
STAIN:ARG:Ｐ = 2
STAIN:ARG:Ｖ = 1
STAIN:ARG:Ａ = 8
STAIN:ARG:Ｂ = 0
STAIN:ARG:膣内 = 0

;潤滑を1000減らす
IF PALAM:ARG:潤滑 > 1000
	PALAM:ARG:潤滑 -= 1000
ELSE
	PALAM:ARG:潤滑 = 0
ENDIF

RETURN 1

