	A = 5
ELSEIF ABL:17 == 1
	A = 50
ELSEIF ABL:17 == 2
	A = 600
ELSEIF ABL:17 == 3
	A = 7000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.10
	ENDIF
ELSEIF ABL:17 == 4
	A = 45000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.30
	ENDIF
ELSE
	A = 45000
	;EASYモードなら軽減
	IF ITEM:99 == 1
		A = A * (ABL:17 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
		ENDIF
	ELSE
		A = A * (ABL:17 - 3) * (ABL:17 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
		ENDIF
	ENDIF
ENDIF

