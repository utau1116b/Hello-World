;B感覚が上げられるかチェック
;-------------------------------------------------
@ISABLUP14
IF ABL:14 >= 99
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP14

;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

;快Ｂの珠で上げる
SIF JUEL:14 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;B感覚を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP14
IF ABL:14 == 0
	A = 1
ELSEIF ABL:14 == 1
	A = 20
ELSEIF ABL:14 == 2
	A = 400
ELSEIF ABL:14 == 3
	A = 5000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.10
	ENDIF
ELSEIF ABL:14 == 4
	A = 20000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.30
	ENDIF
ELSE
	A = 20000
	;EASYモードなら軽減
	IF ITEM:99 == 1
		A = A * (ABL:14 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
		ENDIF
	ELSE
		A = A * (ABL:14 - 3) * (ABL:14 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
		ENDIF
	ENDIF
ENDIF

