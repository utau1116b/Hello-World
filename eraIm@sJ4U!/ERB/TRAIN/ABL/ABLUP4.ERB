;-------------------------------------------------
;V感覚が上げられるかチェック
;-------------------------------------------------
@ISABLUP4
IF ABL:4 >= 99 || TALENT:122
	CALL ISABLUP_LIMIT
	RETURN 0
ENDIF

;能力アップに必要なコストを計算
CALL COSTABLUP4

;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

;快Ｖの珠で上げる
SIF JUEL:1 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

IF Z == 0
	RETURN 0
ELSE
	RETURN 1
ENDIF



;-------------------------------------------------
;V感覚を上げるのに必要なコストを計算
;-------------------------------------------------
@COSTABLUP4
IF ABL:4 == 0
	A = 1
ELSEIF ABL:4 == 1
	A = 50
ELSEIF ABL:4 == 2
	A = 600
ELSEIF ABL:4 == 3
	A = 7000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.10
	ENDIF
ELSEIF ABL:4 == 4
	A = 45000
	;一線越えない
	IF TALENT:27
		TIMES A , 1.30
	ENDIF
ELSE
	A = 45000
	;EASYモードなら軽減
	IF ITEM:99 == 1
		A = A * (ABL:4 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
		ENDIF
	ELSE
		A = A * (ABL:4 - 3) * (ABL:4 - 3)
		;一線越えない
		IF TALENT:27
			TIMES A , 1.30
		ENDIF
	ENDIF
ENDIF

