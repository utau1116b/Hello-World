;FileName_TRACHECK_EQUIP.ERB ----------------------- Rev1.00
;Ｖ挿入継続の処理
;CALL		USER
;ARG		ARG:キャラNO
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@EQUIP_INCERT_V(ARG)
;-------------------------------------------------
;行為者
;-------------------------------------------------
TCVAR:ARG:116 = TEQUIP:ARG:50
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 ）
;TCVAR:4 射精快感強度

LOCALS = {ARG}/
CSTR:(TEQUIP:ARG:50):10 += LOCALS
TCVAR:(TEQUIP:ARG:50):2 = 1
;強度
TCVAR:(TEQUIP:ARG:50):4 = 700

PRINTFORML ＜%CALLNAME:(TEQUIP:9)%Ｖインサート＞
DOWNBASE:ARG:体力 += 20
DOWNBASE:ARG:気力 += 50
;DOWNBASE:ARG:疲労 += 20

SOURCE:ARG:快Ｖ += 150
SOURCE:ARG:情愛 += 75
SOURCE:ARG:露出 += 25

;Vへの苦痛は先に処理しておく
;EXP:Ｖ経験をみる（処女はありえない）
LOCAL = 200
LOCAL:1 = 150
IF EXP:ARG:Ｖ経験 < EXPLV:2
	TIMES LOCAL , 0.80
	TIMES LOCAL:1 , 1.20
ELSEIF EXP:ARG:Ｖ経験 < EXPLV:3
	TIMES LOCAL , 0.40
ELSEIF EXP:ARG:Ｖ経験 < EXPLV:4
	TIMES LOCAL , 0.10
ELSEIF EXP:ARG:Ｖ経験 < EXPLV:5
	TIMES LOCAL , 0.00
ELSEIF EXP:ARG:Ｖ経験 >= EXPLV:5
	TIMES LOCAL , 0.00
ENDIF

;PALAM:潤滑をみる
IF PALAM:ARG:潤滑 < PALAMLV:1
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 1.50
ELSEIF PALAM:ARG:潤滑 < PALAMLV:2
	TIMES LOCAL , 0.70
	TIMES LOCAL:1 , 1.20
ELSEIF PALAM:ARG:潤滑 < PALAMLV:3
	TIMES LOCAL , 0.40
ELSEIF PALAM:ARG:潤滑 < PALAMLV:4
	TIMES LOCAL , 0.10
ELSEIF PALAM:ARG:潤滑 >= PALAMLV:4
	TIMES LOCAL , 0.10
ENDIF

SOURCE:ARG:痛み += LOCAL
SOURCE:ARG:反感 += LOCAL:1
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;EXP:ARG:Ｖ性交経験 ++
RETURN 1

