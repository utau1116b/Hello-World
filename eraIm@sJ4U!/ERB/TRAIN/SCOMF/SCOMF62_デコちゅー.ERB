@SCOM62
;デコちゅー
LOCAL = RAND:110
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 109
	LOCAL:1 = 109
IF LOCAL <= 9
	;10％で大成功
	TFLAG:SELECTCOM分岐 = 1
	IF TEQUIP:TARGET:デート中
		EXP:MASTER:デート経験 ++
		EXP:TARGET:デート経験 ++
	ENDIF
ELSEIF LOCAL >= LOCAL:1
	;10〜1％で失敗
	TFLAG:SELECTCOM分岐 = -1
ELSE
	;残りは成功
	TFLAG:SELECTCOM分岐 = 0
ENDIF

IF TEQUIP:TARGET:デート中
	DOWNBASE:気力 += 50
	DOWNBASE:MASTER:気力 += 30
ELSE
	DOWNBASE:気力 += 80
	DOWNBASE:MASTER:気力 += 50
ENDIF

;固定で獲得するソース
SOURCE:歓楽 = 180
SOURCE:情愛 = 200
SOURCE:反感 = 200

;ABL:親密をみる
IF ABL:親密 <= 1
	SOURCE:情愛 += (ABL:親密 * 30)
ELSEIF ABL:親密 <= 3
	SOURCE:歓楽 += 150 + (ABL:親密 * 50)
	SOURCE:情愛 += 200 + (ABL:親密 * 40)
ELSEIF ABL:親密 <= 5
	SOURCE:歓楽 += 250 + (ABL:親密 * 70)
	SOURCE:情愛 += 280 + (ABL:親密 * 50)
ELSEIF ABL:親密 <= 8
	SOURCE:歓楽 += 350 + (ABL:親密 * 80)
	SOURCE:情愛 += 380 + (ABL:親密 * 50)
ELSEIF ABL:親密 <= 11
	SOURCE:歓楽 += 400 + (ABL:親密 * 90)
	SOURCE:情愛 += 500 + (ABL:親密 * 70)
ELSE
	SOURCE:歓楽 += 700 + (ABL:親密 * 75)
	SOURCE:情愛 += 730 + (ABL:親密 * 50)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:情愛 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:情愛 += 400 + (CFLAG:2 - 500) / 4
ELSE
	SOURCE:情愛 += 1200 + (CFLAG:2 - 5000) / 6
ENDIF
SIF SOURCE:情愛 < 0
	SOURCE:情愛 = 0

LOCAL = 0
;好感度が低いと好感度低下
IF CFLAG:2 <= 50
	LOCAL -= 3
ELSEIF CFLAG:2 <= 100
	LOCAL -= 2
ELSEIF CFLAG:2 <= 250
	LOCAL -= 1
ENDIF


SOURCE:受動 = 150 + 300 * ABL:親密

;好感度変化
;TFLAG:97 += LOCAL

IF TFLAG:SELECTCOM分岐 == -1
	TIMES SOURCE:歓楽 , 0.10
	TIMES SOURCE:情愛 , 0.50
	TIMES SOURCE:受動 , 0.50
ELSEIF TFLAG:SELECTCOM分岐 == 0
	TIMES SOURCE:歓楽 , 1.00
	TIMES SOURCE:情愛 , 1.00
	TIMES SOURCE:受動 , 1.00
ELSE
	TIMES SOURCE:歓楽 , 2.00
	TIMES SOURCE:情愛 , 2.00
	TIMES SOURCE:受動 , 2.00
ENDIF
TIME += 10
EXP:MASTER:キス経験 += 1
IF TEQUIP:TARGET:デート中
	EXP:MASTER:デート経験 ++
	EXP:TARGET:デート経験 ++
	;CALL DATE_GOES_ON(1)
ENDIF
IF HETEROSEX(TARGET,PLAYER)
	EXP:レズ経験 += 2
	EXP:MASTER:レズ経験 += 2
ENDIF

RETURN 1

