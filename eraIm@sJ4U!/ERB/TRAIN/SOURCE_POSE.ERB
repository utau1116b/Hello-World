;FileName_SOURCE_POSE.ERB -------------------------- Rev1.00
;MASTERとTARGETの接触部位を設定する
;CALL		USER
;ARG		ARG:TARGETの接触部位(101=ペニス 102=クリトリス 103=指 104=口 105=胸 106=膣 107=アナル)
;		ARG:1 MASTERの接触部位(1=ペニス 2=クリトリス 3=指 4=口 5=胸 6=膣 7=アナル)
;		ARG:2 対象のキャラ番号
;		ARG:3 真ならリセットする
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@TOUCH_SET(ARG,ARG:1,ARG:2,ARG:3)
VARSET LOCAL

;リセット呼出しなら接触リセット
IF ARG:3
	FOR LOCAL,1,CHARANUM
	;関係ない人は省く
	SIF LOCAL != MASTER && LOCAL != TARGET && LOCAL != ASSI
		CONTINUE
		;接触部位を消去
		FOR LOCAL:1,1,8
			TEQUIP:LOCAL:(100 + LOCAL:1) = 0
		NEXT
		;ついでに体位もリセット
		TEQUIP:LOCAL:体位 = 0
		;ついでにはだけ状態もリセット
		TEQUIP:LOCAL:3 = 0
		TEQUIP:LOCAL:4 = 0
	NEXT
	;MASTERのはだけもリセット
	;TEQUIP:MASTER:3 = 0
	;TEQUIP:MASTER:4 = 0
ENDIF
;接触部位異常ならRETURN
SIF ARG <= 100
	RETURN 0

FOR LOCAL,1,CHARANUM
	;関係ない人は省く
	SIF LOCAL != MASTER && LOCAL != TARGET && LOCAL != ASSI
		CONTINUE
	;MASETRの接触部位を解除
	FOR LOCAL:1,1,8
		SIF TEQUIP:LOCAL:(100 + LOCAL:1) == ARG:1 + (10 * PLAYER)
			TEQUIP:LOCAL:(100 + LOCAL:1) = 0
	NEXT
NEXT
;接触部位を指定キャラにセット
TEQUIP:(ARG:2):ARG = ARG:1 + (10 * PLAYER)

