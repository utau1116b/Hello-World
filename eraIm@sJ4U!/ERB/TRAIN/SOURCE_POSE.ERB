;ARG		ARG:TARGET
;		ARGS TARGETの接触部位(1=ペニス 2=クリトリス 3=指 4=口 5=胸 6=膣 7=アナル)
;		ARGS:1 ARGSに接触中の部位
;		ARG:3 真ならリセットする
;RETURN		キャラ番号、該当者なしは-1
;COMMENT	
;-----------------------------------------------------------
@GET_INSERT_CHARA(ARG,ARGS,ARGS:1,ARG:2)
#FUNCTION
IF ARGS == "P"
	LOCAL = 101
ELSEIF ARGS == "C"
	LOCAL = 102
ELSEIF ARGS == "F"
	LOCAL = 103
ELSEIF ARGS == "M"
	LOCAL = 104
ELSEIF ARGS == "B"
	LOCAL = 105
ELSEIF ARGS == "V"
	LOCAL = 106
ELSEIF ARGS == "A"
	LOCAL = 107
ELSE
	RETURNF -1
ENDIF
IF ARGS:1 == "P"
	LOCAL:1 = 1
ELSEIF ARGS:1 == "C"
	LOCAL:1 = 2
ELSEIF ARGS:1 == "F"
	LOCAL:1 = 3
ELSEIF ARGS:1 == "M"
	LOCAL:1 = 4
ELSEIF ARGS:1 == "B"
	LOCAL:1 = 5
ELSEIF ARGS:1 == "V"
	LOCAL:1 = 6
ELSEIF ARGS:1 == "A"
	LOCAL:1 = 7
ELSE
	RETURNF -1
ENDIF
IF TEQUIP:ARG:LOCAL > 10
	;該当箇所挿入者有り
	IF TEQUIP:ARG:LOCAL % 10 == LOCAL:1
		LOCAL:2 = (TEQUIP:ARG:LOCAL - LOCAL:1) / 10
		RETURNF LOCAL:2
	ELSE
		RETURNF -1
	ENDIF
ELSE
	;MASTERの場合
	SIF TEQUIP:ARG:LOCAL == LOCAL:1
		RETURNF 0
ENDIF
RETURNF -1

