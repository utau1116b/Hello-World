;注目度表示用文字を返す
;ARG	地方
@注目度表示(ARG, ARG:1, ARGS)
;#FUNCTIONS
VARSET LOCAL
SELECTCASE ARG
	CASE 0
		LOCAL = FLAG:首都注目度
	CASE 1
		LOCAL = FLAG:北東注目度
	CASE 2
		LOCAL = FLAG:中央注目度
	CASE 3
		LOCAL = FLAG:上方注目度
	CASE 4
		LOCAL = FLAG:西注目度
	CASE 5
		LOCAL = FLAG:南注目度
ENDSELECT
SIF LOCAL > 100
	LOCAL = 100
SIF LOCAL < 0
	LOCAL = 0
SELECTCASE LOCAL
	CASE 0 TO 20
		LOCALS = 無関心
		CALL SET_COLOR(12)
	CASE 21 TO 40
		LOCALS = 低
		CALL SET_COLOR(15)
	CASE 41 TO 60
		LOCALS = 普通
		CALL SET_COLOR(20)
	CASE 61 TO 80
		LOCALS = 高
		CALL SET_COLOR(16)
	CASEELSE
		LOCALS = 最高
		CALL SET_COLOR(11)
ENDSELECT
IF ARGS == "LEFT"
	PRINTFORM %LOCALS, ARG:1, LEFT%
ELSE
	PRINTFORM %LOCALS, ARG:1, RIGHT%
ENDIF
RESETCOLOR
