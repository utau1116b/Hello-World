;LOCALリスト
;0	1人目
;1	2人目
;2	3人目
;3	4人目
;4	5人目
;5	ページ数
;6	ループで使用
;7	今何人目を選択中か
;8	一時記憶用
;9	ループで使用2
;10	変更前1人目
;11	変更前2人目
;12	変更前3人目
;13	変更前4人目
;14	変更前5人目


;初期化
LOCAL:0 = -1
LOCAL:1 = -1
LOCAL:2 = -1
LOCAL:3 = -1
LOCAL:4 = -1
LOCAL:5 = 0
LOCAL:6 = 0
LOCAL:7 = 1
LOCAL:8 = 0
LOCAL:10 = FLAG:リーダー
LOCAL:11 = FLAG:メンバー2
LOCAL:12 = FLAG:メンバー3
LOCAL:13 = FLAG:メンバー4
LOCAL:14 = FLAG:メンバー5

$START
DRAWLINE
IF LOCAL:7 == 1
	PRINTFORML ユニットを再編成します。リーダーを選択してください。
ELSE
	PRINTFORML ユニットを再編成します。{LOCAL:7}人目のメンバーを選択してください。
ENDIF
IF LOCAL:7 > 1
	FOR LOCAL:6, 1, LOCAL:7
		PRINTFORM {LOCAL:6}:%CALLNAME:(LOCAL:(LOCAL:6 - 1))% 
	NEXT
	PRINTL 
ENDIF
DRAWLINE

;全体表示
FOR LOCAL:6, (11+30*LOCAL:5), (41+30*LOCAL:5)
	IF (LOCAL:6 % 3 == 2) && (LOCAL:6 != (11+30*LOCAL:5))
		PRINTL 
	ENDIF
	IF LOCAL:6 > (FLAG:キャラ数 + 10)
		PRINTC  
		CONTINUE
	ENDIF
	IF CFLAG:(LOCAL:6):勧誘状況 < 0
		;加入済み
		RESETCOLOR
		;育児中・臨月中は色を変える
		SIF MARK:(LOCAL:6):90 >= 1
		SETCOLOR 0x333333
		
		SIF TALENT:(LOCAL:6):135 >= 1
		SETCOLOR 0x333333
		
		PRINTFORMLC [{LOCAL:6,3}] %CALLNAME:(LOCAL:6),10,LEFT% Lv{BASE:(LOCAL:6):戦闘レベル,2}
		RESETCOLOR
	ELSE
		;非加入
		SETCOLOR 0x333333
		PRINTFORMLC [{LOCAL:6,3}] ？？？
		RESETCOLOR
	ENDIF
NEXT
PRINTL 
DRAWLINE
PRINTLC [7] 前のページ
PRINTFORMLC             Page({LOCAL:5}/{(FLAG:キャラ数 - 1)/30})
PRINTC [9] 次のページ
PRINTL 
SIF LOCAL:7 == 1
	PRINTFORML [5] パートナー（リーダー）のみ交代
	
IF LOCAL:7 > 1
	PRINTL [8] これ以上選択しない
ENDIF
PRINTL [0] 変更をキャンセルする

$INPUT_LOOP
INPUT


IF RESULT == 0
	PRINTFORMW 変更をキャンセルしました
	TARGET = FLAG:リーダー
	RETURN
ELSEIF RESULT == 5
	CALL CHANGE_TARGET
	RETURN 
ELSEIF RESULT == 7
	;前ページへ
	LOCAL:5 -= 1
	SIF LOCAL:5 < 0
		LOCAL:5 = 0
ELSEIF (LOCAL:7 > 1) && (RESULT == 8)
	;中断
	
	;今居るメンバーをまず全員外す
	FOR LOCAL:6, 0, 5
		IF (FLAG:(LOCAL:6 + 1080) >= 0)
			CFLAG:(FLAG:(LOCAL:6 + 1080)):メンバー内位置 = 0
		ENDIF
	NEXT
	
	;新しいメンバーを設定
	FOR LOCAL:6, 0, 5
		FLAG:(LOCAL:6 + 1080) = LOCAL:(LOCAL:6)
		IF (LOCAL:(LOCAL:6) >= 0)
			CFLAG:(LOCAL:(LOCAL:6)):メンバー内位置 = LOCAL:6 + 1
		ENDIF
	NEXT
	CALL CHANGE_TARGET2(FLAG:リーダー, LOCAL:10)
	TARGET = FLAG:リーダー
	PRINTFORMW メンバーを変更しました
	;加入口上
	FOR LOCAL:6, 0, 5
		LOCAL:8 = 0
		FOR LOCAL:9, 0, 5
			IF FLAG:(LOCAL:6 + 1080) == LOCAL:(LOCAL:9 + 10)
				;前にもいたならフラグを立てる
				LOCAL:8 = 1
				BREAK
			ENDIF
		NEXT
		IF LOCAL:8 == 0 && FLAG:(LOCAL:6 + 1080) >= 0
			;新規加入キャラ
			FLAG:1800 = 23
			CALL KOJO(FLAG:(LOCAL:6 + 1080))
		ENDIF
	NEXT
	;離脱口上
	FOR LOCAL:6, 0, 5
		LOCAL:8 = 0
		FOR LOCAL:9, 0, 5
			IF FLAG:(LOCAL:9 + 1080) == LOCAL:(LOCAL:6 + 10)
				;変更後も居るならフラグを立てる
				LOCAL:8 = 1
				BREAK
			ENDIF
		NEXT
		IF LOCAL:8 == 0 && LOCAL:(LOCAL:6 + 10) >= 0
			;離脱キャラ
			FLAG:1800 = 24
			CALL KOJO(LOCAL:(LOCAL:6 + 10))
		ENDIF
	NEXT
	RETURN
ELSEIF RESULT == 9
	;次ページへ
	LOCAL:5 += 1
	SIF LOCAL:5 > ((FLAG:キャラ数 - 1) / 30)
		LOCAL:5 = (FLAG:キャラ数 - 1) / 30
ELSEIF RESULT >= 11 && RESULT <= (FLAG:キャラ数 + 10)
	;直接指定
	IF MARK:RESULT:90 >= 1 || TALENT:RESULT:135 >= 1
		REUSELASTLINE 臨月・育児中のキャラは選べません。
		GOTO INPUT_LOOP
	ENDIF
	IF MASTER != 0 && RESULT == MASTER
		REUSELASTLINE プレイヤーは選べません。
		GOTO INPUT_LOOP
	ENDIF
	IF (RESULT == LOCAL:0) || (RESULT == LOCAL:1) || (RESULT == LOCAL:2) || (RESULT == LOCAL:3)
		REUSELASTLINE そのキャラは既に選択されています。再入力してください
		GOTO INPUT_LOOP
	ELSEIF CFLAG:(RESULT):勧誘状況 < 0
		;確認表示
		LOCAL:8 = RESULT
		CALL SHOW_PERSONAL_STATUS(RESULT)
		IF LOCAL:7 == 1
			CALL SET_COLOR(LOCAL:8)
			PRINTFORM %CALLNAME:(LOCAL:8)%
			RESETCOLOR
			PRINTFORML をリーダーにしますか？
		ELSE
			CALL SET_COLOR(LOCAL:8)
			PRINTFORM %CALLNAME:(LOCAL:8)%
			RESETCOLOR
			PRINTFORML をメンバーに加えますか？
		ENDIF
		PRINTL [0] はい
		PRINTL [1] いいえ
		INPUT
		IF RESULT
			GOTO START
		ENDIF
		LOCAL:(LOCAL:7 - 1) = LOCAL:8
		PRINTFORMW {LOCAL:7}人目に%CALLNAME:(LOCAL:8)%を設定しました
		LOCAL:7 += 1
		IF LOCAL:7 > 5
			;今居るメンバーをまず全員外す
			FOR LOCAL:6, 0, 5
				IF (FLAG:(LOCAL:6 + 1080) >= 0)
					CFLAG:(FLAG:(LOCAL:6 + 1080)):メンバー内位置 = 0
				ENDIF
			NEXT
			
			;新しいメンバーを設定
			FOR LOCAL:6, 0, 5
				FLAG:(LOCAL:6 + 1080) = LOCAL:(LOCAL:6)
				IF (LOCAL:(LOCAL:6) >= 0)
					CFLAG:(LOCAL:(LOCAL:6)):メンバー内位置 = LOCAL:6 + 1
				ENDIF
			NEXT
			;CALL CHANGE_TARGET(FLAG:リーダー, LOCAL:10)
			TARGET = FLAG:リーダー
			PRINTFORMW メンバーを変更しました
			RETURN
		ENDIF
	ELSE
		REUSELASTLINE 入力値が不正です。再入力してください
		GOTO INPUT_LOOP
	ENDIF
ELSE
	REUSELASTLINE 入力値が不正です。再入力してください
	GOTO INPUT_LOOP
ENDIF

GOTO START

