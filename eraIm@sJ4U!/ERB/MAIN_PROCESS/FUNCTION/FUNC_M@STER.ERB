;ユニット状態で左右される
@SUM_VO(ARG)
;??ボーカル値などに親密で補正？
#FUNCTION
VARSET LOCAL
IF ARG >= 11
	FOR LOCAL, 1080, 1085
		IF FLAG:LOCAL >= 11
			LOCAL:2 += BASE:(FLAG:LOCAL):ベースボーカル
			LOCAL:3 ++
		ENDIF
	NEXT
	LOCAL:2 = LOCAL:2 * 100 / LOCAL:3 / 5 / 100
ELSE
	LOCAL:2 = BASE:ARG:ベースボーカル * 100 / 5 /100
ENDIF
RETURNF LOCAL:2

