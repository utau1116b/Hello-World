@アルバム
#DIM スチル存在チェック, 100
VARSET スチル存在チェック
DO 
	PRINTFORML キャラクターを選択してください
	PRINTL
	;タイトル画面ではCHARANUMが使えない
	REPEAT 100
		;スチルの無いキャラクターは省く
		SIF COUNT != 13
			CONTINUE
		PRINTFORML [{COUNT}] - %CSVCALLNAME(COUNT)%
		スチル存在チェック:COUNT ++
	REND
	PRINTL 
	PRINTFORML [0] - 戻る
	INPUT
	IF RESULT == 0
		RETURN
	ELSEIF RESULT >= 11 && スチル存在チェック:RESULT > 0
		BREAK
	ELSE
		CONTINUE
	ENDIF
LOOP 1
LOCAL = RESULT
;なんらかの画像管理するフラグを作って、存在すれば表示という風に
DO 
	PRINTFORML どのスチルを閲覧しますか？
	PRINTL
	PRINTFORML [1] - %CSVCALLNAME(LOCAL)%
	PRINTL 
	PRINTFORML [0] - 戻る
	INPUT
	IF RESULT == 0
		RETURN
	ELSEIF RESULT == 1
		BREAK
	ELSE
		CONTINUE
	ENDIF
LOOP 1
LOCAL:1 = RESULT
CALL SAVELINE
REPEAT 50
	PRINTL
REND
CALL PICDRAW(LOCAL, LOCAL:1)
PRINTL [0] - 戻る
$INPUT_LOOP
INPUT
IF RESULT == 0
	CALL PICDEL
	CALL RETURNLINE
	RETURN
ELSE
	CALL 再入力
	GOTO INPUT_LOOP
ENDIF
