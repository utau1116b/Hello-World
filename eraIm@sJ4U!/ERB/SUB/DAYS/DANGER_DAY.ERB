;月経進行
@EVENT_DANGERDAY
;CFLAG:33
;月経周期
;0〜7	やや安全日
;8〜11	生理
;11〜14	危険日


REPEAT CHARANUM
	;妊娠してない、オトコではない
	IF TALENT:COUNT:134 == 0 && TALENT:COUNT:122 == 0
		LOCAL = 3
		SELECTCASE CFLAG:COUNT:33
		CASE 5, 9, 12
			CFLAG:COUNT:33 += RAND:LOCAL == 0
		ENDSELECT
		CFLAG:COUNT:33 += 1
		CFLAG:COUNT:33 %= 15

		;TALENT;137	危険日
		;TALENT;138	生理
		SELECTCASE CFLAG:COUNT:33
		CASE 0 TO 7
			TALENT:COUNT:137 = 0
			TALENT:COUNT:138 = 0
		CASE 8 TO 11
			TALENT:COUNT:137 = 0
			TALENT:COUNT:138 = 1
		CASE 11
			TALENT:COUNT:137 = 1
			TALENT:COUNT:138 = 1
		CASE 12 TO 14
			TALENT:COUNT:137 = 1
			TALENT:COUNT:138 = 0
		ENDSELECT
	ELSE
		TALENT:COUNT:137 = 0
		TALENT:COUNT:138 = 0
		CFLAG:COUNT:33 = 0
	ENDIF
REND


;初期月経周期の設定
@EVENT_ADD_CHARA_MENSTRUATION
;オトコではない
IF TALENT:L:122 == 0
	CFLAG:L:33 = RAND:15
	;TALENT;137	危険日
	;TALENT;138	生理
	SELECTCASE CFLAG:L:33
	CASE 0 TO 7
		TALENT:L:137 = 0
		TALENT:L:138 = 0
	CASE 8 TO 11
		TALENT:L:137 = 0
		TALENT:L:138 = 1
	CASE 11
		TALENT:L:137 = 1
		TALENT:L:138 = 1
	CASE 12 TO 14
		TALENT:L:137 = 1
		TALENT:L:138 = 0
	ENDSELECT
ELSE
	TALENT:L:137 = 0
	TALENT:L:138 = 0
	CFLAG:L:33 = 0
ENDIF
