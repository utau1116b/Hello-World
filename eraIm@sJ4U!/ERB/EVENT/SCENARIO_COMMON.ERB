;コンフィグで色々調整する部分
@SCENARIO_ABLE_COMMON(ARG)

;実行できるスキットを検索
;更新はSHOPが呼び出される瞬間
;ARG ターゲットのキャラ登録番号
@SEARCH_SCENARIO_ABLE(ARG)

VARSET LOCAL:1
VARSET SCENARIO
FOR LOCAL, 0, 1000
	TRYCALLFORM KOJO_EVENT_ABLE_{ARG}_{LOCAL}
	IF RESULT
		;PRINTFORML J:{J:(LOCAL:1)} = {LOCAL:0}
		SCENARIO:(LOCAL:1) = LOCAL:0
		LOCAL:1 += 1
		RESULT = 0
	ENDIF
NEXT

