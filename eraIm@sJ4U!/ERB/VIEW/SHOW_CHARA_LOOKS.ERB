;
;外見素質表示
;
;ARG　対象キャラ
@SHOW_CHARA_LOOKS(ARG)
CUSTOMDRAWLINE =
CALL SET_COLOR(ARG)
PRINTFORM %CALLNAME:ARG%
RESETCOLOR
IF TALENT:ARG:オトコ
	PRINTFORML (%UNICODE(0X2642)%)
ELSEIF TALENT:ARG:ふたなり
	PRINTFORML (%UNICODE(0X2641)%)
ELSE
	PRINTFORML (%UNICODE(0X2640)%)
ENDIF
PRINTFORM CLASS:%JOBNAME(ARG), 20, LEFT%
PRINTFORM 性格(%PERSONALITY(ARG)%／
IF CFLAG:ARG:12 <= -40
	PRINTFORM 超弱気
ELSEIF CFLAG:ARG:12 < -10
	PRINTFORM  弱気 
ELSEIF CFLAG:ARG:12 <= 10
	PRINTFORM  普通 
ELSEIF CFLAG:ARG:12 < 40
	PRINTFORM  強気 
ELSE
	PRINTFORM 超強気
ENDIF
PRINTFORML )
IF CFLAG:ARG:副職業
	PRINTFORML CLASS:%JOBNAME(ARG, ,2)%
ENDIF
PRINTFORM 髪色　　：%HAIRCOLOR(ARG,1), 20, LEFT%
PRINTFORML 瞳の色：%EYECOLOR(ARG, 1)%
PRINTFORM 髪の長さ：%HAIRLENGTH(ARG,1), 20, LEFT%
IF CFLAG:ARG:瞳の形
	PRINTFORM 瞳の形：%EYESTYLE(ARG)%
ENDIF
PRINTL

PRINTFORM 髪質　　：%HAIRSTRETCH(ARG,1), 20, LEFT%
IF CFLAG:ARG:肌の色
	PRINTFORM 肌の色：%SKINCOLOR(ARG, 1)%
ENDIF
PRINTL

PRINTFORML 髪型　　：%HAIRSTYLE(ARG), 20, LEFT%
IF CFLAG:ARG:髪オプション1
	PRINTFORML 　　　　：%HAIROPTION(ARG)%
ENDIF
IF CFLAG:ARG:髪オプション2
	PRINTFORML 　　　　：%HAIROPTION(ARG,,2)%
ENDIF
DRAWLINE
PRINTFORML □属性
IF CFLAG:ARG:フレーバー1
	PRINTFORML [%FLAVOR(ARG,,1)%]
ENDIF
IF CFLAG:ARG:フレーバー2
	PRINTFORML [%FLAVOR(ARG,,2)%]
ENDIF
IF CFLAG:ARG:フレーバー3
	PRINTFORML [%FLAVOR(ARG,,3)%]
ENDIF
IF CFLAG:ARG:フレーバー4
	PRINTFORML [%FLAVOR(ARG,,4)%]
ENDIF
IF CFLAG:ARG:フレーバー5
	PRINTFORML [%FLAVOR(ARG,,5)%]
ENDIF

