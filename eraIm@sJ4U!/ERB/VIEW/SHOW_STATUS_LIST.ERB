			PRINTC  
			CONTINUE
		ENDIF
		IF CFLAG:(LOCAL:1):勧誘状況 < 0
			;加入済み
			RESETCOLOR
			PRINTFORMLC [{LOCAL:1,3}] %CALLNAME:(LOCAL:1),10,LEFT% Lv{BASE:(LOCAL:1):戦闘レベル,2}
		ELSE
			;非加入
