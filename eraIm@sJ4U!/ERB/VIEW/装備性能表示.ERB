@装備性能(ARG, ARG:1)
VARSET LOCAL
DRAWLINE
IF ARG > 0
	PRINTFORM %ITEMNAME:ARG, 24, LEFT% 
	CALL 装備タイプ表示(ARG)
ELSE
	PRINTFORM %SAVESTR:199, 24, LEFT%
ENDIF
PRINTL 
CALL 装備用VOVIDABAR(ARG)
IF ARG:1 > 0
	PRINT  (
	FOR LOCAL, 0, 7
		SELECTCASE LOCAL
			CASE 0
				TSTR = HP
			CASE 1
				TSTR = MP
			CASE 2
				TSTR = POW
			CASE 3
				TSTR = GUA
			CASE 4
				TSTR = DEX
			CASE 5
				TSTR = SPD
			CASE 6
				TSTR = LUC
			CASEELSE
				TSTR = ""
		ENDSELECT
		TRYCALLFORM %TSTR%_{ARG}
		LOCAL:1 = RESULT
		IF EQUIP:(ARG:1):装着中服ID > 0
			TRYCALLFORM %TSTR%_{EQUIP:(ARG:1):装着中服ID}
			LOCAL:2 = RESULT
		ELSE
			LOCAL:2 = 0
		ENDIF
		IF LOCAL:2 < LOCAL:1
			;上回るなら水色
			SETCOLOR 0x10EEEE
			PRINT +
		ELSEIF LOCAL:2 == LOCAL:1
			;同じなら白
			RESETCOLOR
			PRINT +
		ELSE
			;下回るなら赤色
			SETCOLOR 0xEE1010
			PRINT -
		ENDIF
		PRINTFORM {ABS(LOCAL:1 - LOCAL:2) / 100, 3}
		RESETCOLOR
			IF LOCAL < 6
				PRINT )     (
			ELSE
				;最後は閉じるだけ
				PRINT )
			ENDIF
		NEXT
		PRINTL 
ENDIF
