;-------------------------------------------------
;歌唱のソース
;-------------------------------------------------
@CALC_SOURCE105
A = SOURCE:105
B = SOURCE:105

;ABL:歌唱素質をみる
IF ABL:歌唱適性 <= 70
	TIMES A , 0.30
	TIMES B , 0.80
ELSEIF ABL:歌唱適性 <= 90
	TIMES A , 0.50
	TIMES B , 0.90
ELSEIF ABL:歌唱適性 <= 110
	TIMES A , 0.70
	TIMES B , 1.00
ELSEIF ABL:歌唱適性 <= 130
	TIMES A , 0.80
	TIMES B , 1.10
ELSEIF ABL:歌唱適性 <= 150
	TIMES A , 0.90
	TIMES B , 1.20
ELSEIF ABL:歌唱適性 > 150
	IF A < 100000
		A = A * (ABL:歌唱適性 + 50) / 100
	ELSEIF A < 100000000
		A = A / 100 * (ABL:歌唱適性 + 50)
	ENDIF
	IF B < 100000
		B = B * (ABL:歌唱適性 + 100) / 100
	ELSEIF B < 100000000
		B = B / 100 * (ABL:歌唱適性 + 100)
	ENDIF
ENDIF

;ABL:歌唱技能を見る
IF B < 100000
	B = B * (ABL:Ｖｏ技能 * 10 + 100) / 100
ELSEIF B < 100000000
	B = B / 100 * (ABL:Ｖｏ技能 * 10 + 100)
ENDIF

UP:105 += B

